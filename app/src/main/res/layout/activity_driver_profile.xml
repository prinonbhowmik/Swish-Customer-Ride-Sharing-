<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neomorph_background_color"
    tools:context=".Activity.DriverProfile">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        app:layout_collapseMode="parallax"
        android:background="@color/neomorph_background_color">
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/backNFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:neomorph_view_type="circular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="5dp"
            app:neomorph_corner_radius="10dp"
            android:layout_marginStart="10dp"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginBottom="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="backPress"
                android:padding="7dp"
                android:background="@drawable/round_stroke2"
                android:src="@drawable/ic_arrow_gray"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/editNFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            app:neomorph_view_type="circular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="5dp"
            app:neomorph_corner_radius="10dp"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/editBtn"
                android:padding="5dp"
                android:background="@drawable/round_stroke2"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_alignParentTop="true"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profileNFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:neomorph_view_type="circular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            android:layout_gravity="center_horizontal"
            android:layerType="software"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginBottom="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileIV"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                android:background="@drawable/round_stroke"
                android:src="@drawable/ic_person_24" />
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileNFL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:numStars="5"
            android:rating="0"
            android:stepSize=".5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/rideCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_marginTop="5dp"
            android:text="Rides : "
            android:textAlignment="center"
            android:textColor="#676262" />
        <TextView
            android:id="@+id/bioTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rideCount"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textColor="#676262" />
        <TextView
            android:id="@+id/edit_bioTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bioTv"
            android:text="Update Bio"
            android:drawableEnd="@drawable/ic_edit_24"
            android:drawablePadding="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue1" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/name_LT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginStart="20dp"
            android:textColor="#676262"
            android:textSize="12sp"/>
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/nameNFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            android:layout_below="@+id/name_LT"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginTop="-5dp">
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/stroke"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <TextView
            android:id="@+id/email_LT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginStart="20dp"
            android:layout_below="@+id/nameNFL"
            android:textColor="#676262"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/emailNFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            android:layout_below="@+id/email_LT"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginTop="-5dp">
            <TextView
                android:id="@+id/emailTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/stroke"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <TextView
            android:id="@+id/Phone_LT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_below="@+id/emailNFL"
            android:textColor="#676262"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/phoneNFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            android:layout_below="@+id/Phone_LT"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginTop="-5dp">
            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/stroke"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <TextView
            android:id="@+id/dov_TL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:layout_below="@+id/phoneNFL"
            android:textColor="#676262"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/dobNFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            android:layout_below="@+id/dov_TL"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginTop="-5dp">
            <TextView
                android:id="@+id/dateobTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/stroke"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <TextView
            android:id="@+id/gender_LT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_below="@+id/dobNFL"
            android:textColor="#676262"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"/>
        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/genderNFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:neomorph_view_type="rectangular"
            app:neomorph_shadow_type="outer"
            app:neomorph_elevation="6dp"
            app:neomorph_corner_radius="10dp"
            android:layout_below="@+id/gender_LT"
            android:layerType="software"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            android:layout_marginTop="-5dp">
            <TextView
                android:id="@+id/genderTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/stroke"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/changePasswordNFL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/genderNFL"
            app:neomorph_background_color="@color/neomorph_background_color"
            app:neomorph_corner_radius="10dp"
            app:neomorph_elevation="8dp"
            app:neomorph_highlight_color="@color/neomorph_highlight_color"
            app:neomorph_shadow_color="@color/neomorph_shadow_color"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular">

            <Button
                android:id="@+id/changePassBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/details_btn_design"
                android:text="Change Password"
                android:textAllCaps="false"
                android:textColor="@color/blue1"
                android:textSize="18sp" />
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
    </RelativeLayout>
    </RelativeLayout>
</ScrollView>