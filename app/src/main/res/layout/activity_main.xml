<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.MainActivity"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MapsActivity" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/searchlottie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:lottie_autoPlay="true"
            app:lottie_fileName="searching.json"
            app:lottie_loop="true" />

        <Button
            android:id="@+id/hourlypickUpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@drawable/btn_background"
            android:text="Confirm PickUp"
            android:textAllCaps="false"
            android:textColor="#fff" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/PickUpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:visibility="gone">

            <Button
                android:id="@+id/button_confirm_pickUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_background"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Confirm PickUp"
                android:textColor="#fff"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/btn_background"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Confirm Destination"
                android:textColor="#fff"
                android:textSize="12sp"
                android:visibility="gone" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/chooseRideType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="2">

            <Button
                android:id="@+id/bookNowBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:text="Book Hourly"
                android:textAllCaps="false"
                android:textColor="#fff" />

            <Button
                android:id="@+id/bookLaterBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_background"
                android:text="Book For Later"
                android:textAllCaps="false"
                android:textColor="#fff" />

        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/hourlyLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
                <TextView
                    android:id="@+id/hourlyrideTypeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Select ride type"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layerType="software"
                        app:neomorph_background_color="@color/neomorph_background_color"
                        app:neomorph_corner_radius="10dp"
                        app:neomorph_elevation="8dp"
                        app:neomorph_view_type="rectangular">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hourlySedan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="#fff"
                            android:clickable="true"
                            android:elevation="10dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#fff"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="sedanpremiere.json"
                                    app:lottie_loop="true" />

                                <TextView
                                    android:id="@+id/hourlySedanType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Sedan"
                                    android:textColor="#000"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Hourly Rent"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />
                                <TextView
                                    android:id="@+id/hourlysedanPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-5dp"
                        android:layerType="software"
                        app:neomorph_background_color="@color/neomorph_background_color"
                        app:neomorph_corner_radius="10dp"
                        app:neomorph_elevation="8dp"
                        app:neomorph_view_type="rectangular">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hourlyMicro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="#fff"
                            android:clickable="true"
                            android:elevation="10dp"
                            app:cardCornerRadius="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="#fff"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <com.airbnb.lottie.LottieAnimationView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_centerInParent="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    app:lottie_autoPlay="true"
                                    app:lottie_fileName="hiace.json"
                                    app:lottie_loop="true" />

                                <TextView
                                    android:id="@+id/hourlyMicroType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Micro"
                                    android:textColor="#000"
                                    android:textSize="15sp"
                                    android:textStyle="bold" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Hourly Rent"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/hourlyMicroPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/timeselectLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/wantnowBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_background"
                            android:text="Want Now"
                            android:textAllCaps="false"
                            android:textColor="#fff" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/wantLaterBtn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/btn_background"
                            android:text="Want Later"
                            android:textAllCaps="false"
                            android:textColor="#fff" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/hourlyrideTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/hourtimeDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/hourrideDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_date_range_24"
                            android:padding="10dp"
                            android:text="Select Ride Date"
                            android:textColor="#000"
                            android:textColorHint="#000" />

                        <TextView
                            android:id="@+id/hourrideTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_access_time_24"
                            android:padding="10dp"
                            android:text="Select Ride Time"
                            android:textColor="#000"
                            android:textColorHint="#000" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/hourlyconfirmRideBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_background"
                        android:text="Confirm Ride"
                        android:textColor="#fff"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/searchLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/event_searchCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@android:color/white"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6">
                        <ImageView
                            android:id="@+id/nav_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_menu_black_24dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5.4"
                        android:orientation="vertical">

                        <fragment
                            android:id="@+id/autocomplete_fragment"
                            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                            android:layout_width="match_parent"
                            android:layout_height="45dp" />

                        <LinearLayout
                            android:id="@+id/destinationLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <fragment
                                android:id="@+id/autocomplete_destination"
                                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                                android:layout_width="match_parent"
                                android:layout_height="45dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/locationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_searchCV"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:onClick="locationButton"
                android:src="@drawable/my_location"
                app:fabSize="mini" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bottomsheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_corner"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

                <TextView
                    android:id="@+id/rideTypeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Select ride type"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <HorizontalScrollView
                    android:id="@+id/rideTypes"
                    android:layout_below="@+id/rideTypeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:orientation="horizontal">

                        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layerType="software"
                            app:neomorph_background_color="@color/neomorph_background_color"
                            app:neomorph_corner_radius="10dp"
                            app:neomorph_elevation="8dp"
                            app:neomorph_highlight_color="@color/neomorph_highlight_color"
                            app:neomorph_shadow_color="@color/neomorph_shadow_color"
                            app:neomorph_shadow_type="outer"
                            app:neomorph_view_type="rectangular">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/sedan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:clickable="true"
                                android:elevation="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#fff"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerInParent="true"
                                        android:layout_centerHorizontal="true"
                                        android:background="#fff"
                                        app:lottie_autoPlay="true"
                                        app:lottie_fileName="14716-coupe-car-loop.json"
                                        app:lottie_loop="true" />

                                    <TextView
                                        android:id="@+id/sedanType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Sedan"
                                        android:textColor="#000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sedanprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="$000.00"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layerType="software"
                            app:neomorph_background_color="@color/neomorph_background_color"
                            app:neomorph_corner_radius="10dp"
                            app:neomorph_elevation="8dp"
                            app:neomorph_highlight_color="@color/neomorph_highlight_color"
                            app:neomorph_shadow_color="@color/neomorph_shadow_color"
                            app:neomorph_shadow_type="outer"
                            app:neomorph_view_type="rectangular">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/sedanpremiere"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:clickable="true"
                                android:elevation="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerInParent="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        app:lottie_autoPlay="true"
                                        app:lottie_fileName="sedanpremiere.json"
                                        app:lottie_loop="true" />

                                    <TextView
                                        android:id="@+id/premiereType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Sedan premiere"
                                        android:textColor="#000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sedanpremierePrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="$000.00"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layerType="software"
                            app:neomorph_background_color="@color/neomorph_background_color"
                            app:neomorph_corner_radius="10dp"
                            app:neomorph_elevation="8dp"
                            app:neomorph_highlight_color="@color/neomorph_highlight_color"
                            app:neomorph_shadow_color="@color/neomorph_shadow_color"
                            app:neomorph_shadow_type="outer"
                            app:neomorph_view_type="rectangular">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/sedanbusiness"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:clickable="true"
                                android:elevation="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="#fff"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerInParent="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        app:lottie_autoPlay="true"
                                        app:lottie_fileName="sedanpremiere.json"
                                        app:lottie_loop="true" />

                                    <TextView
                                        android:id="@+id/busniessType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Sedan Business"
                                        android:textColor="#000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/sedanbusinessPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="$000.00"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layerType="software"
                            app:neomorph_background_color="@color/neomorph_background_color"
                            app:neomorph_corner_radius="10dp"
                            app:neomorph_elevation="8dp"
                            app:neomorph_highlight_color="@color/neomorph_highlight_color"
                            app:neomorph_shadow_color="@color/neomorph_shadow_color"
                            app:neomorph_shadow_type="outer"
                            app:neomorph_view_type="rectangular">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/hiace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:clickable="true"
                                android:elevation="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#fff"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_centerInParent="true"
                                        android:layout_centerHorizontal="true"
                                        android:layout_gravity="center"
                                        app:lottie_autoPlay="true"
                                        app:lottie_fileName="hiace.json"
                                        app:lottie_loop="true" />

                                    <TextView
                                        android:id="@+id/hiaceType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Micro(7s)"
                                        android:textColor="#000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/hiaceprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="$000.00"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:layerType="software"
                            app:neomorph_background_color="@color/neomorph_background_color"
                            app:neomorph_corner_radius="10dp"
                            app:neomorph_elevation="8dp"
                            app:neomorph_highlight_color="@color/neomorph_highlight_color"
                            app:neomorph_shadow_color="@color/neomorph_shadow_color"
                            app:neomorph_shadow_type="outer"
                            app:neomorph_view_type="rectangular">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/micro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:background="#fff"
                                android:clickable="true"
                                android:elevation="10dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="#fff"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/microbus" />

                                    <TextView
                                        android:id="@+id/microbusType"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Micro(11s)"
                                        android:textColor="#000"
                                        android:textSize="15sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/microprice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="$000.00"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <LinearLayout
                    android:layout_below="@+id/rideTypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/timeDateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/rideDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_date_range_24"
                            android:padding="10dp"
                            android:text="Select Ride Date"
                            android:textColor="#000"
                            android:textColorHint="#000" />

                        <TextView
                            android:id="@+id/rideTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/ic_baseline_access_time_24"
                            android:padding="10dp"
                            android:text="Select Ride Time"
                            android:textColor="#000"
                            android:textColorHint="#000" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/confirmRideBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_background"
                        android:text="Confirm Ride"
                        android:textColor="#fff"
                        android:visibility="gone" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navigation_drawer_header"
        app:itemIconTint="@color/themColor2"
        app:itemTextColor="@color/themColor2"
        app:menu="@menu/nav_options">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/eamil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="support@swish.com.bd" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="www.swish.com.bd" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>